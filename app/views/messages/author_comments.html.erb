<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<% @arranged_data.each do |author, msgs| %>
    <p id="message_corners">Author:<b><%= author %></b></p><br>

    <% msgs.each do |msg| %>
      <p id="comment_corners"> <%=msg%></p>
    <%end%>
<% end %>

<style type="text/css">
#message_corners {
  border-radius: 25px;
  border: 2px solid #9b958d;
  padding: 20px;
  width: 75%;
}
#comment_corners {
  border-radius: 15px 50px;
  border: 2px solid #9b958d;
  padding: 20px;
  width: 75%;
  position: relative;
  margin-left: 20%
}
</style>
